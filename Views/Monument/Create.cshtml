@{
}
<form method="post" asp-action="Create">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Name">Nazwa:</label>
      <input asp-for="Name" class="form-control">
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <div class="form-group col-md-6">
            <label asp-for="Image">Link do zdjęcia:</label>
            <input asp-for="Image" class="form-control">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CategoryId">Kategoria:</label>
            <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
            </select>
        </div>



        <div class="form-group col-md-4">
            <label asp-for="CityId">Miasto:</label>
            <select class="form-control" asp-items="@ViewBag.Cities" asp-for="CityId">
            </select>
        </div>











        <div class="form-group">
            <label asp-for="Descripton">Opis: </label>
            <textarea asp-for="Descripton" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descripton" class="text-danger"></span>
        </div>
    </div>
  <br />
  <button type="submit" class="btn btn-primary">Dodaj</button>
</form>