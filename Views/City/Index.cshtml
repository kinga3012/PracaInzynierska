@using Microsoft.AspNetCore.Identity
@model IEnumerable<City>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1> MIASTA </h1>
@if (SignInManager.IsSignedIn(User))
{
    <a type="btn btn-success" asp-controller="City" asp-action="Create" class="btn btn-sm btn-outline-secondary">Dodaj nowe</a>
}
else
{
    <p> Aby móc dodawać, usuwać oraz edytować wpisy - zaloguj się!</p>
}
<main>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <p class="card-text">@item.Name</p>
                                <p class="card-text">Kod pocztowy: @item.ZipCode</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="City" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                   </div> 
                   }
            </div>
        </div>
    </div>
</main>